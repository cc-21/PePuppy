<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dog2"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/capture_image_btn1"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|left"
        android:drawableLeft="@color/colorAccent"
        android:text="Take a photo"
        android:visibility="visible"></Button>

    <Button
        android:id="@+id/capture_image_btn2"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="150dp"
        android:layout_height="72dp"
        android:layout_gravity="bottom|right"
        android:drawableLeft="@color/colorAccent"
        android:text="take from library"
        android:visibility="visible"></Button>

    <ImageView
        android:id="@+id/photo_view"
        android:layout_width="107dp"
        android:layout_height="106dp"
        android:layout_marginStart="52dp"
        android:layout_gravity="left"
        android:layout_marginLeft="52dp"

        android:layout_marginTop="630dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_a_photo_black_24dp"></ImageView>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="120dp"
        android:layout_height="102dp"
        android:layout_marginStart="450dp"
        android:layout_marginTop="630dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_collections_black_24dp"
        android:layout_marginLeft="450dp">

    </ImageView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="514dp"
        android:layout_height="356dp"
        android:layout_gravity="center"
        android:text="LOVELY DOGGY" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>